.user {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user__avatar {
    margin-bottom: 20px;
    margin-right: 20px;
}

.user__desc-item {
    display: flex;
    justify-content: flex-start;
}

.user__key {
    margin-bottom: 25px;
}

.user__value {
    font-weight: bold;
    text-align: right;
}