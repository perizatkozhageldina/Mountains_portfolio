.usefulness {
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
}

.knowledge {
    display: flex;
}

.knowledge__list {
    margin-top: 50px;
}

.knowledge__item.area {
    margin-top: 50px;
}

.area__title {
    font-size: 18px;
}

.area__list {
    display: flex;
    align-items: center;
}

.area__item {
    margin: 50px;
    position: relative;
    width: 60px;

    &::before {
        content: "";
        width: 100px;
        height: 100px;
        border: solid 10px #393939;
        border-radius: 50%;
        position: absolute;
        top: -50px;
        left: -30px;
    }
    &::after {
        content: "";
        width: 90px;
        height: 90px;
        border: solid 20px red;
        border-radius: 50%;
        position: absolute;
        top: -60px;
        left: -35px;
        transition: opacity .5s;
    }
}