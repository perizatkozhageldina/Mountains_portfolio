.works {
    margin-top: 150px;
    display: grid;
    align-items: center;
}

.works__container {
    display: grid;
    grid-template-rows: 10% 1fr;
    grid-template-areas:
    "works-title"
    "works-content";
    grid-row-gap: 60px;

    @include tablets() {
        grid-row-gap: 0;
    }
}

.works__title {
    grid-area: works-title;
}

.works__content {
    grid-area: works-content;
}