.reviews {
    min-height: 960px;
    display: grid;
}

.reviews__container {
    width: 70%;
    display: grid;
    grid-template-rows: 20% 1fr;
    grid-template-columns: 1fr;
    grid-template-areas:
    "reviews-title"
    "reviews-content";
    align-items: center;
    align-self: center;
    grid-row-gap: 60px;
}

.reviews__title {
    grid-area: reviews-title;
}

.reviews__content {
    grid-area: reviews-content;
}